#!/usr/bin/env ruby

# This allows opencode_theme to run easily from a git checkout without install.
# Hat tip to chriseppstein of Compass fame for the code for this
def fallback_load_path(path)
  puts "fallback_load_pathgem un"
  retried = false
  begin
    yield
  rescue LoadError
    unless retried
      $: << path
      retried = true
      retry
    end
    raise
  end
end
puts "binnn"
puts "= File.dirname(__FILE__)=>#{File.dirname(__FILE__)}"
fallback_load_path(File.join(File.dirname(__FILE__), '..', 'lib')) do
  require 'opencode_theme'
  puts "bin2"
  require 'opencode_theme/cli'
end
puts "binnnn44"
OpencodeTheme::Cli.start(ARGV)

